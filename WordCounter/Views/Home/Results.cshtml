<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Word Counter</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Word Counter</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @if (@Model == 1)
                    {
                        <h3>There is @Model instance of the word you searched for.</h3>
                    }
                    else
                    {
                        <h3>There are @Model instances of the word you searched for.</h3>
                    }

                </div>
            </div>
        </div>
    </body>
</html>